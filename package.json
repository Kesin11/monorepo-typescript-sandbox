{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "reference": "workspaces-to-typescript-project-references",
    "clean": "tsc -b --clean && rm -rf dist_app",
    "build": "tsc -b",
    "build:clean": "npm run clean && npm run build",
    "test": "npm run test -ws",
    "lint": "eslint --cache \"packages/**/{src,__tests__}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "pack": "npm run build && npm run --ws --if-present pack"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "2.8.2",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "eslint": "8.23.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-standard": "4.1.0",
    "typescript": "4.7.4"
  }
}
